{{#if (eq @scope "mobile")}}
  <Rlv::Button
    @label="Log uit"
    @skin="primary"
    @size="large"
    class="bg-red-700 hover:bg-red-600"
    {{on "click" this.logout}} />
{{else}}
  <Rlv::Button
    @label="Log uit"
    @skin="primary"
    @icon="logout-box-r-line"
    @hideText={{true}}
    @size="large"
    class="bg-red-700 hover:bg-red-600"
    {{on "click" this.logout}} />
{{/if}}
