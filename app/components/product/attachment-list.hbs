<div class="mt-6 grid grid-cols-1 gap-y-6 gap-x-4 md:grid-cols-2">
  <ul class="border border-gray-200 rounded-md max-h-80 overflow-y-auto">
    {{#each @files as |file index|}}
      <li class="pl-3 pr-4 py-3 flex items-center justify-between text-sm
        {{if (gt index 0) "border-t border-gray-200"}}">
        <div class="w-0 flex-1 flex items-center">
          {{svg-jar "attachment-2" class="shrink-0 h-5 w-5 text-gray-400 fill-current"}}
          <span class="ml-2 flex-1 w-0 truncate">
            {{file.filename}}
            <span class="ml-2 text-xs text-gray-400"> {{file.humanReadableSize}}</span>
          </span>
        </div>
        <div class="ml-4 shrink-0 flex space-x-4">
          <Rlv::Button
            @label="Download"
            @href={{file.downloadLink}}
            @skin="link"
            target="_blank"
            rel="noopener noreferrer" />
          {{#if @onDelete}}
            <span class="text-gray-300" aria-hidden="true">|</span>
            <Rlv::Button
              @label="Verwijder"
              @skin="link"
              {{on "click" (fn @onDelete file)}} />
          {{/if}}
        </div>
      </li>
    {{/each}}
  </ul>
</div>
