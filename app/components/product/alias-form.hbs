<ul>
  {{#each @aliases as |alias|}}
    <li class="my-1.5">
    <div class="flex items-center gap-x-2">
      <div class="text-sm text-gray-900">{{alias}}</div>
      <Rlv::Button
        @icon="delete-bin-line"
        @skin="naked"
        @size="small"
        @alert={{true}}
        {{on "click" (fn this.removeAlias alias)}} />
    </div>
    </li>
  {{/each}}
  <li class="my-1.5">
    <form class="flex items-center gap-x-2"
      {{on "submit" this.addAlias}}
    >
      <Rlv::LanguageInput
        id="new-alias-name"
        @value={{this.newAlias}}
        @onChange={{fn (mut this.newAlias)}}
        {{on "focusout" this.attemptSubmit}}
        class="focus:ring-red-200 focus:border-red-200 block w-full border-gray-300 rounded-md sm:text-sm" />
      <Rlv::Button
        @icon="add-line"
        @skin="secondary-muted"
        @size="small"
        @disabled={{not this.newAliasIsValid}}
        type="submit"
      />
    </form>
  </li>
</ul>