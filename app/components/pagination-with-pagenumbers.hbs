<div class="bg-white px-4 py-3 flex items-center justify-between border-t border-gray-200 sm:px-6">
  <div class="flex-1 flex {{if this.hasPrevious "justify-between" "justify-end"}} sm:hidden">
    {{#if this.hasPrevious}}
      <button type="button"
        {{on "click" @onPrevious}}
        class="relative inline-flex items-center px-4 py-2 border border-gray-300 text-sm leading-5 font-medium rounded-md text-gray-700 bg-white hover:text-red-600 focus:outline-none focus:shadow-outline-blue focus:border-blue-300 active:bg-gray-100 active:text-red-800 transition ease-in-out duration-150">
        Vorige
      </button>
    {{/if}}
    {{#if this.hasNext}}
      <button type="button"
        {{on "click" @onNext}}
        class="ml-3 relative inline-flex items-center px-4 py-2 border border-gray-300 text-sm leading-5 font-medium rounded-md text-gray-700 bg-white hover:text-red-600 focus:outline-none focus:shadow-outline-blue focus:border-blue-300 active:bg-gray-100 active:text-red-800 transition ease-in-out duration-150">
        Volgende
      </button>
    {{/if}}
  </div>
  <div class="hidden sm:flex-1 sm:flex sm:items-center sm:justify-between">
    <div>
      <p class="text-sm leading-5 text-gray-700">
        <span class="font-medium">{{this.start}}</span>
        tot
        <span class="font-medium">{{this.end}}</span>
        van
        <span class="font-medium">{{@total}}</span>
        resultaten
      </p>
    </div>
    <div>
      <nav class="relative z-0 inline-flex shadow-sm">
        {{#if this.hasPrevious}}
          <button type="button"
            {{on "click" @onPrevious}}
            class="relative inline-flex items-center px-2 py-2 rounded-l-md border border-gray-300 bg-white text-sm leading-5 font-medium text-gray-500 hover:text-gray-400 focus:z-10 focus:outline-none focus:border-blue-300 focus:shadow-outline-blue active:bg-gray-100 active:text-gray-500 transition ease-in-out duration-150" aria-label="Vorige">
            {{!-- Heroicon name: chevron-left --}}
            <svg class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M12.707 5.293a1 1 0 010 1.414L9.414 10l3.293 3.293a1 1 0 01-1.414 1.414l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 0z" clip-rule="evenodd" />
            </svg>
          </button>
        {{else}}
            <span class="relative inline-flex items-center px-2 py-2 rounded-l-md border border-gray-300 bg-white text-sm leading-5 font-medium text-gray-300">
              {{!-- Heroicon name: chevron-left --}}
              <svg class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M12.707 5.293a1 1 0 010 1.414L9.414 10l3.293 3.293a1 1 0 01-1.414 1.414l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 0z" clip-rule="evenodd" />
              </svg>
            </span>
        {{/if}}
        {{#each this.pages as |zeroBasedPage|}}
          {{#let (add zeroBasedPage 1) as |page|}}
            {{#if page}}
              <button type="button"
                {{on "click" (fn @onSelectPage zeroBasedPage)}}
                class="-ml-px relative inline-flex items-center px-4 py-2 border border-gray-300 bg-white text-sm leading-5 font-medium {{if (eq zeroBasedPage this.page) "text-red-600 hover:text-red-800 active:text-red-600" "text-gray-700 hover:text-gray-500 active:text-gray-700"}} focus:z-10 focus:outline-none focus:border-blue-300 focus:shadow-outline-blue active:bg-gray-100 transition ease-in-out duration-150">
                {{page}}
              </button>
            {{else}}
              <span class="-ml-px relative inline-flex items-center px-4 py-2 border border-gray-300 bg-white text-sm leading-5 font-medium text-gray-700">
                ...
              </span>
            {{/if}}
          {{/let}}
        {{/each}}
        {{#if this.hasNext}}
          <button type="button"
            {{on "click" @onNext}}
            class="-ml-px relative inline-flex items-center px-2 py-2 rounded-r-md border border-gray-300 bg-white text-sm leading-5 font-medium text-gray-500 hover:text-gray-400 focus:z-10 focus:outline-none focus:border-blue-300 focus:shadow-outline-blue active:bg-gray-100 active:text-gray-500 transition ease-in-out duration-150" aria-label="Volgende">
            {{!-- Heroicon name: chevron-right --}}
            <svg class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
            </svg>
          </button>
        {{else}}
          <span class="-ml-px relative inline-flex items-center px-2 py-2 rounded-r-md border border-gray-300 bg-white text-sm leading-5 font-medium text-gray-300">
            {{!-- Heroicon name: chevron-right --}}
            <svg class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
            </svg>
          </span>
        {{/if}}
      </nav>
    </div>
  </div>
</div>
