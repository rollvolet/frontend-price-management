<div
  class="relative grow flex rounded-md shadow-sm"
>
  <input
    type="text"
    value={{this.content}}
    {{on "change" (pick "target.value" this.changeContent)}}
    ...attributes
  />

  <div class="absolute inset-y-0 right-0 items-center">
    <label for="taal" class="sr-only">Taal</label>
    <select
      id="taal"
      name="taal"
      class="h-full focus:ring-red-200 focus:border-red-200 block w-full border-gray-300 rounded-md border-0 bg-transparent py-0 pl-2 pr-7 focus:ring-inset sm:text-sm"
      {{on "change" (pick "target.value" this.changeLanguage)}}
    >
      {{#each this.languageOptions as |lang|}}
        <option selected={{eq this.language lang}}>{{lang}}</option>
      {{/each}}
    </select>
  </div>
</div>
