<div class="relative grow flex rounded-md shadow-sm" {{did-insert this.setWrapperNode}}>
  <input
    type="text"
    value={{this.content}}
    {{on "change" (pick "target.value" this.changeContent)}}
    {{on "focusout" this.focusOut}}
    ...attributes
  />

  <div class="absolute inset-y-0 right-0 items-center">
    <label for="language" class="sr-only">Taal</label>
    <select
      id="language"
      name="language"
      class="h-full focus:ring-red-200 focus:border-red-200 focus:ring-2 block w-full border-gray-300 rounded-md border-0 bg-transparent py-0 pl-2 pr-7 focus:ring-inset sm:text-sm"
      {{on "change" (pick "target.value" this.changeLanguage)}}
      {{on "focusout" this.focusOut}}
    >
      {{#each this.languageOptions as |lang|}}
        <option selected={{eq this.language lang}}>{{lang}}</option>
      {{/each}}
    </select>
  </div>
</div>
